	vector <int> List(0);
	int len = 0;
	// Ввод значений стека
	len = Input(len, List);

	// Добавление элементов1
	len = Push(len, List);
	// Вывод стека1
	Output(len, List);
	// Добавление элементов2
	len = Push(len, List);
	// Вывод стека2
	Output(len, List);
	// Нахождение количества элементов в стеке больших трёх
	More_three(len, List);
	return 0;
